
@{
    ViewBag.Title = "Bracket";
}

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="exampleModalLabel">Add Game</h5>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="form-control-label">Bowl Name</label>
                        <input type="text" class="form-control" id="new-bowl-name">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="form-control-label">Bowl Time:</label>
                        <div>
                            <input data-bind="datetimepicker: $root.newGameTime, value: $root.newGameTime" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="form-control-label">Bowl City:</label>
                        <input type="text" class="form-control" id="new-bowl-city">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="form-control-label">Bowl State:</label>
                        <select class="stateSelect" data-bind="value: $root.newGameSelectedStateID,
                                       options: states,
                                       optionsText: 'StateName',
                                       optionsValue: 'StateID'"></select>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="form-control-label">Favorite:</label>
                        <div>
                            <select class="favoriteSelect" data-bind="value: $root.selectFavorite,
                                       options: teams,
                                       optionsText: 'TeamName',
                                       optionsValue: 'TeamID'"></select>
                        </div>
                        <input type="text" class="form-control" id="new-bowl-favorite" data-bind="visible: $root.selectFavorite() == -1">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="form-control-label">Underdog:</label>
                        <input type="text" class="form-control" id="new-bowl-underdog">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="form-control-label">Point Spread:</label>
                        <input type="text" class="form-control" id="new-bowl-spread">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Add Game</button>
            </div>
        </div>
    </div>
</div>

<div class="row title-bar">
    <div class="col-xs-6">
        <span class="title">2016</span>
    </div>
    <div class="col-xs-6" style="text-align:right">
        @*<button class="btn btn-default" data-bind="">Add Game</button>*@
        <button class="btn btn-default" data-toggle="modal" data-target=".bd-example-modal-lg">Add Game</button>
    </div>
</div>


<div data-bind="foreach: $root.games" class="center-all">
    @Html.Partial("_Game")
</div>




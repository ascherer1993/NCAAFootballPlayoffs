<div class="col-md-12" data-bind="visible: !isEditing()"  style="text-align:left">
    <div class="game-style row">
        <div class="col-md-12">
            @*<div class="row" style="border-bottom:1px solid black; background-color:#A8B2CD; color:#fff,">*@
            <div class="row" style="border-bottom:1px solid black; background-color:#A8B2CD; color:#fff; -webkit-font-smoothing: antialiased; -moz-font-smoothing: antialiased; -o-font-smoothing: antialiased;">
                <div class="col-md-12" data-bind="text: 'Bonus Question ' + ($index() + 1)"></div>
                <span data-bind="click: $root.editBonusQuestion" class="top-right glyphicon glyphicon-cog"></span>
            </div>
            <div class="row">
                <div class="col-md-12" data-bind="text: Text()" style="padding-top:5px"></div>
            </div>
            <div class="row" data-bind="foreach: QuestionAnswers" style="padding-bottom:5px">
                <div class="col-md-12">
                    <!-- ko if: $parent.DisplayAsMultChoice() == true -->
                    <input type="radio" data-bind="checked: $parent.answerPickID, value: QuestionAnswerID" /><span data-bind="text: ' ' + Text()"></span>
                    <!-- /ko -->
                    <!-- ko if: $parent.DisplayAsMultChoice() == false -->
                    <span>Answer: </span><input type="text" data-bind="value: Text" />
                    <!-- /ko -->
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12" data-bind="visible: isEditing()" style="text-align:left">
    <div class="game-style row">
        <div class="col-md-12">
            <div class="row" style="border-bottom:1px solid black">
                <div>
                    <span>Question: </span><input data-bind="value: Text" />
                </div>

                <span data-bind="click: $root.deleteQuestion" class="top-right glyphicon glyphicon-trash"></span>
                <span data-bind="click: $root.saveBonusQuestion" class="top-right glyphicon glyphicon-floppy-disk" style="right:18px"></span>
            </div>
            <div class="row" data-bind="foreach: QuestionAnswers">
                <div class="col-md-12">
                    @*<input type="radio" data-bind="checked: teamPickID, value: Favorite.T" />*@
                    <span>Answer: </span><input data-bind="value: Text" />
                </div>
            </div>
        </div>
    </div>
</div>
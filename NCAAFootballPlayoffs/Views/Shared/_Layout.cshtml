<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Home/Home.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("NCAA Bracket", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbar-title" })
            </div>
            <div class="navbar-header" style="float: right">
                @if (Session["username"] == null)
                {
                    @Html.ActionLink("Sign In", "SignIn", "UserAccount", new { area = "" }, new { @class = "navbar-brand-float-right navbar-subtitle", @style = "" })
                }
                else {
                    @Html.ActionLink("Sign Out", "SignOut", "UserAccount", new { area = "" }, new { @class = "navbar-brand-float-right navbar-subtitle", @style = "" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.Year - Aaron Scherer</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
@model NCAAFootballPlayoffs.Models.Username

@{
    ViewBag.Title = "Create Bracket";
}

<h2>Create Bracket</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.UserID, new { id = "userID" })

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }
        <div>
            Create new bracket for @Model.User.EmailAddress
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                @Html.LabelFor(model => model.UsernameText, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-sm-12">
                @Html.EditorFor(model => model.UsernameText, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Create Bracket" class="btn btn-default" />
            </div>
        </div>
    </div>
}
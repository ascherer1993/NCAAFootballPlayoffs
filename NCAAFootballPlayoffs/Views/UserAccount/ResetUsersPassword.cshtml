@model IEnumerable<NCAAFootballPlayoffs.Models.User>

@{
    ViewBag.Title = "Reset User's Password";
}

<h2>Select User to impersonate</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="seasonID" class="control-label col-md-2">Email Address</label>
            <div class="col-md-10">
                <div>
                    @{
                        var valueList = Model.Select(x => new SelectListItem()
                        {
                            Text = x.EmailAddress.ToString(),
                            Value = x.UserID.ToString()
                        }).AsEnumerable();
                        @Html.DropDownList("userID", valueList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
                    }
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reset Password'" class="btn btn-default" />
                <div>*This will reset the selected users password to '1111'. They can then change their password in the change password page.</div>
            </div>
        </div>
    </div>
                        }

<div>
    @Html.ActionLink("Back to Admin Page", "Admin", "UserAccount")
</div>

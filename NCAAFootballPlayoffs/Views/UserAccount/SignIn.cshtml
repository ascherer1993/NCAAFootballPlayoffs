@model NCAAFootballPlayoffs.Models.ViewModels.SignInViewModel

@{
    ViewBag.Title = "Sign In";
}

<h2>Sign In</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-sm-12">
                @Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-sm-12">
                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <span>
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                    @Html.ActionLink("Forgot Password?", "", "", new { }, new { @style="font-size: 10px" })
                </span>
            </div>
            <div class="col-sm-12">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Sign In" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Don't have an account? Click here to create one", "CreateAccount", "UserAccount")
</div>
